$breakpoints: (
  "sp": "screen and (max-width: 767px)",
  //767px以下（スマホ）用の表示
  "tb": "screen and (min-width: 768px) and (max-width: 1024px)",
  "pc": "screen and (min-width: 768px)" //768px以上（タブレット・PC）用の表示,,
) !default;

@mixin mq($breakpoint: sp) {
  @media #{map-get($breakpoints, $breakpoint)} {
    @content;
  }
}
